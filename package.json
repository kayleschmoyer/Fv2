{
  "name": "fliv2-installer",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern installer for FLIv2 with automated setup",
  "main": "dist/electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build:electron": "tsc -p tsconfig.electron.json && node scripts/rename-to-cjs.js",
    "build": "npm run build:electron && vite build",
    "package": "electron-builder",
    "package:win": "electron-builder --win"
  },
  "keywords": [
    "FLIv2",
    "installer",
    "automation"
  ],
  "author": "Ensight",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "googleapis": "^129.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.ensight.fliv2installer",
    "productName": "FLIv2 Installer",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
